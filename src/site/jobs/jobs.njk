---
pagination:
  data: jobs
  resolve: values
  size: 1
  alias: job
  addAllPagesToCollections: true
layout: 'layouts/base.njk'
permalink: 'jobs/{{ job["Title"] | slug }}/'
---

{% block content %}
<section class="black-70 mw8">
  <div class="pl3 pl5-l pb3 pt3 pt5-ns measure mw7-l">
    <h2 class="f3-l f4 ttu fw5 measure-wide">
      {{ job['Title'] }}
    </h2>
    <div class="pv3 bb b--black-10">
      <p class="f6 f5-ns lh-copy measure">
        {{ job['Description'] | markdown | safe }}
      </p>
    </div>
    <div class="f5 f4-l lh-copy">
      {{ job['Body'] | markdown | safe  if job['Body'] else "Page content not found" }}
      {% if job['Apply Link'] %}
        <a href="job['Apply Link']" class="f5 no-underline black bg-animate hover-bg-black hover-white inline-flex items-center pa3 ba border-box">
          <span class="pr1">APPLY</span>
          <svg class="w1" data-icon="chevronRight" viewBox="0 0 32 32" style="fill:currentcolor">
            <title>chevronRight icon</title>
            <path d="M12 1 L26 16 L12 31 L8 27 L18 16 L8 5 z"></path>
          </svg>
        </a>
      {% endif %}
    </div>
  </div>
</section>
{% endblock%}
